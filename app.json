{
  "expo": {
    "name": "kolet",
    "slug": "kolet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.limebit.kolet",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.limebit.kolet"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.limebit.kolet",
      "softwareKeyboardLayoutMode": "pan",
      "permissions": ["android.permission.NFC"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Raleway-Regular.ttf",
            "./assets/fonts/Montserrat-Regular.ttf",
            "./assets/fonts/SpaceMono-Regular.ttf",
            "./assets/fonts/Montserrat-SemiBold.ttf",
            "./assets/fonts/Raleway-SemiBold.ttf"
          ]
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "Kolet needs your persimission to access NFC for NFC payments."
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "expo-system-ui",
        {
          "statusBar": {
            "barStyle": "dark-content",
            "backgroundColor": "#ffffff"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "5a102ff8-072c-44ef-bf56-0af5fbb9961e"
      }
    },
    "newArchEnabled": true
  }
}
